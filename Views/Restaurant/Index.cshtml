@model IEnumerable<SampleASPCore.Models.Restaurant>

@section MyCSS {
    <!-- Custom styles for this page -->
  <link href="~/sbadmin2/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<div class="card mb-4">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">Restaurant List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr role="row">
                    <th>NO</th>
                    <th>NAME</th>
                    <th>DESCRIPTION</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @if(Model != null)
                {
                    @foreach(var item in Model)
                    {  
                        <tr role="row" class="odd">
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-xs btn-primary">details</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
     <!-- Page level plugins -->
  <script src="~/sbadmin2/vendor/datatables/jquery.dataTables.min.js"></script>
  <script src="~/sbadmin2/vendor/datatables/dataTables.bootstrap4.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="~/sbadmin2/js/demo/datatables-demo.js"></script>
}